<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" android:padding="2dp">
    <item>

    <layer-list>
        <item>
                <shape android:shape="rectangle">
                    <solid android:color="#aeaeae"/>
                    <corners android:radius="5dp" />
                </shape>
            </item>
        <item android:left="0dp"
            android:right="2dp"
            android:top="0dp"
            android:bottom="2dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp"/>
                <gradient
                    android:angle="135"
                    android:centerColor="@color/colorAccent"
                    android:endColor="@color/center_gradient"
                    android:startColor="@color/center_gradient"
                    android:type="linear" />
            </shape>
        </item>
    </layer-list>
    </item>


</selector>