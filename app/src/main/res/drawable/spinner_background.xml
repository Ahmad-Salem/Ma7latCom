<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>


            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#aeaeae"/>
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item
                android:left="0dp"
                android:right="2dp"
                android:top="0dp"
                android:bottom="2dp">
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorAccent" android:startColor="@color/colorAccent" android:type="linear" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>


            <item android:left="5dp">

                <bitmap android:gravity="center_vertical|left"  android:src="@drawable/down_arrow2" />

            </item>
            <item android:right="5dp">

                <bitmap android:gravity="right"   android:src="@drawable/map_marker" />

            </item>

        </layer-list>

    </item>

</selector>