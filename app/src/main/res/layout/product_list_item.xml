<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_marginBottom="8dp"
    android:background="@drawable/slider_shadow"
    android:id="@+id/product_item_container">

    <ImageView
        android:id="@+id/product_list_photo"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/test_offer"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_list_title1"
            android:text="أسم المنتج"
            android:textStyle="bold"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_list_description"
            android:layout_below="@+id/product_list_title1"
            android:text="أسم المنتج"
            android:layout_marginTop="5dp"
            android:textSize="8sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_list_price"
            android:text="أسم المنتج"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textSize="8sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_list_price_coin"
            android:text="جنيه"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="5sp"
            />

    </RelativeLayout>


</LinearLayout>