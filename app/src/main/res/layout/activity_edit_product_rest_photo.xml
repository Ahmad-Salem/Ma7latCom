<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@drawable/pattern_of_icon"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ahmad_elbayadi.ma7laty.activities.Add_product_own">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/newuser_activity_toolbar_add_product_22_rest"
        android:background="@drawable/splash_gradient_bg"
        design:titleTextColor="@color/colorPrimary"
        app:title=" "
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/toolbar_title_reg_add_product_22_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعديل صور المنتج"
            android:textSize="12sp"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_new_reg_add_product_22_rest"
        android:layout_below="@+id/newuser_activity_toolbar_add_product_22_rest">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_name_container_rest"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/newuser_activity_toolbar_add_product_22_rest">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="تعديل صورة المنتج"
                android:id="@+id/shop_title99ofpro_rest"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/shop_title99ofpro_rest"
                android:id="@+id/photo_product_container2_rest">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_image"/>

                <Button
                    android:id="@+id/photo_product2_rest"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/upload_photo_bg"
                    android:hint="أضف صور  للمنتج"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="عدد الصور : 0"
                android:id="@+id/photo_number_rest"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/photo_product_container2_rest"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"/>

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">



            </com.google.android.material.appbar.AppBarLayout>


            <GridView
                android:layout_below="@+id/photo_number_rest"
                android:id="@+id/gv_rest"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:numColumns="2"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/add_new_product_rest"
                android:layout_below="@+id/gv_rest"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:text="إضافة المنتج"
                android:textSize="12sp"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_btn"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
