<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_of_icon"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ahmad_elbayadi.ma7laty.activities.Offer_Details">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/offer_details_activity_toolbar1"
        android:background="@drawable/splash_gradient_bg"
        android:layout_width="match_parent"
        design:titleTextColor="@color/colorPrimary"
        app:title=" "
        android:layout_height="60dp"
        android:layoutDirection="rtl"
        android:textDirection="rtl" >
        <TextView
            android:id="@+id/offer_main_list_toolbar_title_302"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفاصيل العرض"
            android:textColor="@color/white"
            android:textSize="12sp"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/offer_details_activity_toolbar1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shop_details_container"
                android:background="@drawable/shop_details_container"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/shop_details_imageviewbg"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/shop_image_container">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/photo_startup1"
                        android:id="@+id/offer_photo_details"
                        android:layout_margin="5dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="any description"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:layout_below="@+id/shop_image_container"
                    android:id="@+id/textviews_container">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسم العرض: "
                        android:id="@+id/offer_name_details_pro"

                        android:textSize="12sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسم العرض "
                        android:textColor="@color/cardview_dark_background"
                        android:layout_toLeftOf="@+id/offer_name_details_pro"
                        android:id="@+id/offer_name_details"
                        android:layout_marginRight="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="وصف العرض: "
                        android:id="@+id/offer_description_details_pro"
                        android:layout_below="@+id/offer_name_details"
                        android:layout_marginRight="0dp"
                        android:textSize="8sp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسم العرض "
                        android:layout_toLeftOf="@+id/offer_description_details_pro"
                        android:id="@+id/offer_country_details"
                        android:layout_below="@+id/offer_name_details"
                        android:layout_marginRight="10dp"
                        android:textSize="8sp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="30dp"
                        />

                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:id="@+id/shop_details_container2"
                android:layout_below="@+id/shop_details_container"
                android:background="@drawable/shop_details_container"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/shop_image_container2">

                </RelativeLayout>
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/shop_image_container2"
                    android:id="@+id/textviews_container2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسم صاحب العرض: "
                        android:id="@+id/offer_owner_name_details_pro2"
                        android:layout_marginRight="20dp"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسم العرض "
                        android:layout_toLeftOf="@+id/offer_owner_name_details_pro2"
                        android:id="@+id/offer_name_details2"
                        android:layout_marginRight="10dp"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="البريد الألكتروني: "
                        android:id="@+id/offer_owner_email_details_pro2"
                        android:layout_below="@+id/offer_name_details2"
                        android:layout_marginRight="20dp"
                        android:textSize="8sp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسم العرض "
                        android:layout_toLeftOf="@+id/offer_owner_email_details_pro2"
                        android:id="@+id/offer_country_details2"
                        android:layout_below="@+id/offer_name_details2"
                        android:layout_marginRight="10dp"
                        android:textSize="8sp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="30dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="العنوان: "
                        android:id="@+id/offer_owner_address_details_pro2"
                        android:layout_below="@+id/offer_owner_email_details_pro2"
                        android:layout_marginRight="20dp"
                        android:textSize="8sp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسم العرض "
                        android:layout_toLeftOf="@+id/offer_owner_email_details_pro2"
                        android:id="@+id/offer_owner_address_details"
                        android:layout_below="@+id/offer_owner_email_details_pro2"
                        android:layout_marginRight="10dp"
                        android:textSize="8sp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        />
                </RelativeLayout>
                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/textviews_container2"
                        android:id="@+id/phone1_container_info">


                        <Button
                            android:background="@drawable/customer_services_button_layout"
                            android:layout_marginTop="10dp"
                            android:id="@+id/dial_number1_info"
                            android:layout_width="220dp"
                            android:layout_marginRight="-2dp"
                            android:layout_height="20dp"
                            android:hint="000-000-000"
                            android:inputType="numberDecimal"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:layout_marginBottom="12dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/phone1_container_info"
                        android:id="@+id/phone1_container2_info">


                        <Button
                            android:background="@drawable/customer_services_button_layout"
                            android:layout_marginTop="10dp"
                            android:id="@+id/dial_number2_info"
                            android:layout_width="220dp"
                            android:layout_marginRight="-2dp"
                            android:layout_height="20dp"
                            android:hint="000-000-000"
                            android:inputType="numberDecimal"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:layout_marginBottom="12dp"
                            />

                    </LinearLayout>



            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>






</RelativeLayout>
