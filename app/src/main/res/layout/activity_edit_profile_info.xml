<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@drawable/pattern_of_icon"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ahmad_elbayadi.ma7laty.activities.newUserResgister">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/newuser_activity_toolbar77"
        android:background="@drawable/splash_gradient_bg"
        design:titleTextColor="@color/colorPrimary"
        app:title=" "
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layoutDirection="rtl"
        android:textDirection="rtl">
        <TextView
            android:id="@+id/toolbar_title_reg77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعديل بياناتك الشخصية"
            android:textSize="12sp"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_new_reg77"
        android:layout_below="@+id/newuser_activity_toolbar77">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newuser_container77"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/newuser_activity_toolbar77">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/user_name_container77">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_user_name"/>

                <EditText
                    android:id="@+id/user_name77"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_edit_text"
                    android:hint="أدخل أسم المستخدم "
                    android:inputType="text"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_below="@id/user_name_container77"
                android:id="@+id/email_container77">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input__email_login_background"/>
                <EditText
                    android:background="@drawable/login_edit_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/email_address77"
                    android:layout_width="250dp"
                    android:layout_marginRight="-8dp"
                    android:layout_height="30dp"
                    android:hint="أدخل البريد الألكتروني"
                    android:paddingRight="15dp"
                    android:inputType="textEmailAddress"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/email_container77"
                android:id="@+id/password_container77">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_pass_reg"/>
                <EditText
                    android:background="@drawable/login_edit_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/password77"
                    android:layout_width="250dp"
                    android:layout_marginRight="-8dp"
                    android:layout_height="30dp"
                    android:hint="أدخل كلمة المرور"
                    android:paddingRight="12dp"
                    android:inputType="textVisiblePassword"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/password_container77"
                android:id="@+id/re_password_container77">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_pass_reg"/>
                <EditText
                    android:background="@drawable/login_edit_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/re_password77"
                    android:layout_width="250dp"
                    android:layout_marginRight="-8dp"
                    android:layout_height="30dp"
                    android:hint="أعد إدخال كلمة المرور"
                    android:paddingRight="15dp"
                    android:inputType="textVisiblePassword"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/re_password_container77"
                android:id="@+id/address_container77">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_address"/>
                <EditText
                    android:background="@drawable/login_edit_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/address77"
                    android:layout_width="250dp"
                    android:layout_marginRight="-8dp"
                    android:layout_height="30dp"
                    android:hint="أدخل العنوان الخاص بك"
                    android:paddingRight="15dp"
                    android:inputType="text"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/address_container77"
                android:id="@+id/phone1_container77">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_cell_phone"/>
                <EditText
                    android:background="@drawable/login_edit_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/phone177"
                    android:layout_width="250dp"
                    android:layout_marginRight="-8dp"
                    android:layout_height="30dp"
                    android:hint="أدخل رقم الهاتف الأول"
                    android:paddingRight="15dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/phone1_container77"
                android:id="@+id/phone2_container77">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_cell_phone"/>
                <EditText
                    android:background="@drawable/login_edit_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/phone277"
                    android:layout_width="250dp"
                    android:layout_marginRight="-8dp"
                    android:layout_height="30dp"
                    android:hint="أدخل رقم الهاتف الثاني"
                    android:paddingRight="15dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/add_new_user77"
                android:layout_below="@+id/phone2_container77"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:text="تعديل"
                android:textSize="12sp"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_btn"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>