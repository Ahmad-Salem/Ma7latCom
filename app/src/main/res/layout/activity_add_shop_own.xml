<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@drawable/pattern_of_icon"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ahmad_elbayadi.ma7laty.activities.Add_shop_own">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/newuser_activity_toolbar_add_shop_22"
        android:background="@drawable/splash_gradient_bg"
        design:titleTextColor="@color/colorPrimary"
        app:title=" "
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layoutDirection="rtl"
        android:textDirection="rtl">
        <TextView
            android:id="@+id/toolbar_title_reg_add_shop_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إضافة محل جديد"
            android:textSize="12sp"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_new_reg_add_shop_22"
        android:layout_below="@+id/newuser_activity_toolbar_add_shop_22">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shop_name_container"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/newuser_activity_toolbar_add_shop_22">
                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/user_shop_container">
                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/input_user_name"/>

                        <EditText
                            android:id="@+id/shop_name_add"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="-8dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_edit_text"
                            android:hint="أدخل أسم المحل "
                            android:inputType="text"
                            android:paddingRight="15dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/user_shop_container"
                    android:id="@+id/address_shop_container">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_user_address"/>

                    <EditText
                        android:id="@+id/shop_address_add"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="-8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/login_edit_text"
                        android:hint="أدخل عنوان المحل "
                        android:inputType="text"
                        android:paddingRight="15dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/address_shop_container"
                    android:id="@+id/user_shop_gov_container">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_location"/>

                    <Spinner
                        android:textDirection="rtl"
                        android:layoutDirection="rtl"
                        android:id="@+id/government_spine_pop_up22"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:paddingRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="-8dp"
                        android:layout_marginTop="10dp"
                        style="@style/SpinnerTheme2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/user_shop_gov_container"
                    android:id="@+id/user_shop_city_container">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_location"/>

                    <Spinner
                        android:textDirection="rtl"
                        android:layoutDirection="rtl"
                        android:id="@+id/city_spine_pop_up22"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:paddingRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="-8dp"
                        android:layout_marginTop="10dp"
                        style="@style/SpinnerTheme2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/user_shop_city_container"
                    android:id="@+id/user_shop_activity_container">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_shop_activity"/>

                    <Spinner
                        android:textDirection="rtl"
                        android:layoutDirection="rtl"
                        android:id="@+id/activity_spine_pop_up22"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:paddingRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="-8dp"
                        android:layout_marginTop="10dp"
                        style="@style/SpinnerTheme2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/user_shop_activity_container"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/description_shop_container">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_shop_description"/>

                    <EditText
                        android:id="@+id/shop_description_add"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="-12dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/login_edit_text"
                        android:hint="أدخل وصف المحل "
                        android:inputType="text"
                        android:paddingRight="15dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/description_shop_container"
                    android:id="@+id/lat_shop_container">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_location"/>

                    <EditText
                        android:id="@+id/lat_shop_add"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="-8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/login_edit_text"
                        android:hint="أدخل خط العرض "
                        android:inputType="number"
                        android:paddingRight="15dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/lat_shop_container"
                    android:id="@+id/log_shop_container">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_location"/>

                    <EditText
                        android:id="@+id/log_shop_add"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="-8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/login_edit_text"
                        android:hint="أدخل خط الطول "
                        android:inputType="number"
                        android:paddingRight="15dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/log_shop_container"
                    android:id="@+id/photo_shop_container">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_image"/>
                    <Button
                        android:background="@drawable/upload_photo_bg"
                        android:layout_marginTop="10dp"
                        android:id="@+id/photo_shop"
                        android:layout_width="250dp"
                        android:layout_marginRight="-8dp"
                        android:layout_height="30dp"
                        android:hint="أضف صورة المحل"
                        android:paddingRight="15dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_marginBottom="20dp"
                        />

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/shop_photo_reg"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/store"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorAccent"
                    android:layout_below="@+id/photo_shop_container"/>

                <Button
                    android:id="@+id/add_new_shop"
                    android:layout_below="@+id/shop_photo_reg"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:text="إضافة المحل"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:paddingLeft="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_btn"
                    />


            </RelativeLayout>

            </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_cached_black_24dp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

