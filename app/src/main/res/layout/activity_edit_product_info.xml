<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@drawable/pattern_of_icon"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ahmad_elbayadi.ma7laty.activities.Add_product_own">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/newuser_activity_toolbar_add_product_2299pro22"
        android:background="@drawable/splash_gradient_bg"
        design:titleTextColor="@color/colorPrimary"
        app:title=" "
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/toolbar_title_reg_add_product_2299"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعديل المنتج"
            android:textSize="12sp"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_new_reg_add_product_2299"
        android:layout_below="@+id/newuser_activity_toolbar_add_product_2299pro22"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_name_container99"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="تعديل بيانات المنتج"
                android:id="@+id/product_title99"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/product_title99"
                android:id="@+id/user_product_container99">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_user_name"/>

                <EditText
                    android:id="@+id/product_name_add99"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_edit_text"
                    android:hint="أدخل أسم المنتج "
                    android:inputType="text"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/user_product_container99"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/product_price_container99">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_user_name"/>

                <EditText
                    android:id="@+id/product_price_add99"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_edit_text"
                    android:hint="أدخل سعر المنتج "
                    android:inputType="numberDecimal"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/product_price_container99"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/description_product_container99">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_shop_description"/>

                <EditText
                    android:id="@+id/product_description_add99"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="-12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_edit_text"
                    android:hint="أدخل وصف المنتج "
                    android:inputType="text"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
            <Button
                android:id="@+id/add_new_product99"
                android:layout_below="@+id/description_product_container99"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:text="تعديل المنتج"
                android:textSize="12sp"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_btn"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>