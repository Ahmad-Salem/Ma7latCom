<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_marginBottom="5dp"
    android:background="@drawable/slider_shadow"
    android:id="@+id/product_item_container1254">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:id="@+id/cont">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_list_title1"
        android:text="أسم المنتج:"
        android:textStyle="bold"
        android:textSize="8sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_list_title2"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/product_list_title1"
        android:textSize="8sp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_list_title3"
            android:text="44444"
            android:textStyle="bold"
            android:textSize="8sp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_list_title4"
            android:text="جنيه"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:textSize="8sp"
            android:layout_toLeftOf="@+id/product_list_title3"
            />
    </RelativeLayout>

</RelativeLayout>


</RelativeLayout>