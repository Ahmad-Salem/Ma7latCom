<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@drawable/pattern_of_icon"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ahmad_elbayadi.ma7laty.activities.Add_shop_own">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/newuser_activity_toolbar_add_shop_2299ofpro"
        android:background="@drawable/splash_gradient_bg"
        design:titleTextColor="@color/colorPrimary"
        app:title=" "
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/toolbar_title_reg_add_shop_2299ofpro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعديل صورة المنتج"
            android:textSize="12sp"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="تعديل صورة المنتج"
        android:id="@+id/shop_title99ofpro"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/newuser_activity_toolbar_add_shop_2299ofpro"/>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/shop_title99ofpro"
        android:id="@+id/photo_shop_container99ofpro">
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/input_image"/>
        <Button
            android:background="@drawable/upload_photo_bg"
            android:layout_marginTop="10dp"
            android:id="@+id/photo_shop99ofpro"
            android:layout_width="250dp"
            android:layout_marginRight="-8dp"
            android:layout_height="30dp"
            android:hint="أضف صورة المنتج الرئيسية"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shop_photo_reg99ofpro"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/store"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"
        android:layout_below="@+id/photo_shop_container99ofpro"/>

    <Button
        android:id="@+id/add_new_shop99ofpro"
        android:layout_below="@+id/shop_photo_reg99ofpro"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="تعديل"
        android:textSize="12sp"
        android:padding="2dp"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_btn"/>

</RelativeLayout>