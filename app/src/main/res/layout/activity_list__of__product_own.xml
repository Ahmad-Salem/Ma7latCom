    <RelativeLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_of_shop_internet_connection_layout_pro12_own"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/internet_connection"
            android:id="@+id/connection_photo_list_of_shop_pro12_own"
            />
        <TextView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لايوجد إتصال بالأنترنت"
            android:id="@+id/connection_text_list_of_shop_pro12_own"
            android:layout_below="@+id/connection_photo_list_of_shop_pro12_own"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حاول مرة أخري"
            android:layout_marginTop="20dp"
            android:id="@+id/retry_list_of_shop_pro12_own"
            android:layout_below="@+id/connection_text_list_of_shop_pro12_own"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_product2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_queue_black_24dp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
