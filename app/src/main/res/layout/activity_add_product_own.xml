            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/user_product_container">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_user_name"/>

                <EditText
                    android:id="@+id/product_name_add"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_edit_text"
                    android:hint="أدخل أسم المنتج "
                    android:inputType="text"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/user_product_container"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/product_price_container">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_user_name"/>

                <EditText
                    android:id="@+id/product_price_add"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_edit_text"
                    android:hint="أدخل سعر المنتج "
                    android:inputType="numberDecimal"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/product_price_container"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/description_product_container">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_shop_description"/>

                <EditText
                    android:id="@+id/product_description_add"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="-12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_edit_text"
                    android:hint="أدخل وصف المنتج "
                    android:inputType="text"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
