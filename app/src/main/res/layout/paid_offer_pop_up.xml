<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="340dp"
    android:layoutDirection="rtl"
    android:id="@+id/pop_up_dis_shop_paid_offer"
    android:textDirection="rtl"
    android:layout_height="450dp"
    android:background="@drawable/transparent_dark"
    android:padding="10dp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="x"
        android:id="@+id/close_btn_advertisement_paid_offer"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_close_backgraound"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/advertisement_details_image_zooming_paid_offer"
            android:src="@drawable/logo"
            android:scaleType="fitXY"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/advertisement_info_paid_offer"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="زيارة المحل لمشاهدة المزيد"
                android:id="@+id/adver_title_paid_offer"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="زيارة المحل"
                android:background="@drawable/rounded_btn"
                android:textColor="@color/white"
                android:id="@+id/visite_shop_paid_offer"
                android:layout_below="@+id/adver_title_paid_offer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"/>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>