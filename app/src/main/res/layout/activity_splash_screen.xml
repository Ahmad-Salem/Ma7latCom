<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/splash_gradient_bg"
    android:layout_height="match_parent"
    tools:context="com.example.ahmad_elbayadi.ma7laty.splash_screen.splash_screen">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:scaleX="1.1"
        android:id="@+id/logo_img"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/splash_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_text1"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo_img"
        />

    <TextView
        android:id="@+id/splash_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_text2"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>
