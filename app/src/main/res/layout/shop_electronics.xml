<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/slider_layout_off"
    android:textDirection="rtl"
    android:layoutDirection="ltr"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="250dp"
        android:id="@+id/leftSide"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/main_layout_border"
        android:layout_toLeftOf="@+id/rightSide">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/offer_images_container">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/bg_photo_mainpage"
                android:id="@+id/offers_silder_id"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_shop"
                android:scaleType="fitXY"
                android:layout_marginRight="-2dp"
                android:layout_marginTop="-50dp"
                android:id="@+id/paid_offer"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/line_sp_1"
            android:layout_below="@+id/offer_images_container"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textColor="@color/gray"
            android:id="@+id/offername1"
            android:layout_below="@+id/line_sp_1"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textColor="@color/gray"
            android:id="@+id/description1"
            android:layout_below="@+id/offername1"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="10dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"/>

    </RelativeLayout>
