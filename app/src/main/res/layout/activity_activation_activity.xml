<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@drawable/pattern_of_icon"
    tools:context="com.example.ahmad_elbayadi.ma7laty.activities.activation_activity">
    <TextView
        android:layout_width="wrap_content"
        android:text="كود التفعيل:"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/activation_title"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@+id/activation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/activation_code_container">
        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/input_password_login_background"/>
        <EditText
            android:background="@drawable/login_edit_text"
            android:layout_marginTop="10dp"
            android:id="@+id/activation_code_value"
            android:layout_width="250dp"
            android:layout_marginRight="-12dp"
            android:layout_height="40dp"
            android:hint="أدخل كود التفعيل"
            android:padding="8dp"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/login_btn_code1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/rounded_login_btn"
        android:layout_below="@+id/activation_code_container"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:text="تسجيل الدخول"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/re_send_link"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/activation_title_link"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn_code1"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/down_login"/>
    </RelativeLayout>
</RelativeLayout>
